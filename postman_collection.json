							]
						},
						"method": "POST",
						"header": [],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"channel\": \"email\",\n    \"recipient\": \"client@example.com\",\n    \"subject\": \"Hello World\",\n    \"content\": \"This is a test message from the notification system.\"\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
